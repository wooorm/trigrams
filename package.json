{
  "name": "trigrams",
  "version": "4.2.0",
  "description": "Trigram files for 400+ languages",
  "license": "MIT",
  "keywords": [
    "universal",
    "declaration",
    "human",
    "rights",
    "unicode",
    "udhr",
    "trigram",
    "language",
    "detection",
    "guessing"
  ],
  "repository": "wooorm/trigrams",
  "bugs": "https://github.com/wooorm/trigrams/issues",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/wooorm"
  },
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "sideEffects": false,
  "type": "module",
  "main": "index.js",
  "files": [
    "lib/",
    "index.js"
  ],
  "devDependencies": {
    "c8": "^7.0.0",
    "hast-util-select": "^4.0.2",
    "hast-util-to-string": "^1.0.4",
    "mdast-zone": "^4.0.0",
    "prettier": "^2.0.0",
    "rehype-parse": "^7.0.1",
    "remark-cli": "^9.0.0",
    "remark-preset-wooorm": "^8.0.0",
    "tape": "^5.0.0",
    "trigram-utils": "^2.0.0",
    "udhr": "^5.0.0",
    "unified": "^9.2.1",
    "unist-builder": "^2.0.0",
    "xo": "^0.38.0"
  },
  "scripts": {
    "generate": "node script/build-data && node script/build-support",
    "format": "remark . -qfo && prettier . -w --loglevel warn && xo --fix",
    "test-api": "node test.js",
    "test-coverage": "c8 --check-coverage --branches 100 --functions 100 --lines 100 --statements 100 --reporter lcov node test.js",
    "test": "npm run format && npm run test-coverage"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "rules": {
      "import/no-mutable-exports": "off",
      "camelcase": "off",
      "no-var": "off",
      "prefer-arrow-callback": "off"
    }
  },
  "remarkConfig": {
    "#to do: add back when `unified-engine` supports ESM": "./script/build-support",
    "plugins": [
      "preset-wooorm",
      [
        "gfm",
        {
          "tablePipeAlign": false
        }
      ],
      [
        "lint-table-pipe-alignment",
        false
      ]
    ]
  }
}
